CREATE TABLE IF NOT EXISTS CitaTable
(
    id                 INTEGER  PRIMARY KEY AUTOINCREMENT,
    estado             INTEGER  NOT NULL,
    fecha              TEXT     NOT NULL,
    id_informe         INTEGER  REFERENCES InformeTable (id),
    usuario_trabajador TEXT     REFERENCES TrabajadorTable (usuario),
    matricula_vehiculo TEXT     REFERENCES VehiculoTable (matricula)
);

