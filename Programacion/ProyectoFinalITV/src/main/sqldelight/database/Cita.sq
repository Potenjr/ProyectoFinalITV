-- Crear cita
insert:
INSERT INTO CitaTable (estado, fecha, id_informe, usuario_trabajador, matricula_vehiculo) VALUES (?,?, ?, ?, ?);

-- Actualizar cita
update:
UPDATE CitaTable SET estado= ?, fecha = ?, id_informe = ?, usuario_trabajador = ?, matricula_vehiculo = ? WHERE id = ?;

-- Borrar por ID cita
deleteById:
DELETE FROM CitaTable WHERE id = ?;

-- Buscar por ID cita
selectById:
SELECT * FROM CitaTable WHERE id = ?;

-- Obtener todo
selectAll:
SELECT * FROM CitaTable;

